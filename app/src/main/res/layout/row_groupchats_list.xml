<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="3dp"
    android:layout_marginTop="1dp"
    tools:context=".Fragments.GroupChatsFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/groupIconIv"
            android:src="@drawable/group_icon_black"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <TextView
            android:id="@+id/groupTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group title"
            android:layout_toEndOf="@+id/groupIconIv"
            android:textSize="18sp"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/nameTv"
            android:layout_toEndOf="@id/groupIconIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupTitleTv"
            android:textColor="@color/black"
            android:text="Sender name"
            android:singleLine="true"
            android:layout_marginStart="4dp" />
        <TextView
            android:id="@+id/messageTv"
            android:layout_toEndOf="@id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupTitleTv"
            android:textColor="@color/black"
            android:text="Message"
            android:singleLine="true"
            android:layout_marginStart="5dp" />

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTv"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black"
            android:text="10:15am"
            android:singleLine="true" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>