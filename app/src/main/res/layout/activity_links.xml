<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context=".CardOptions.LinksActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/Option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    app:cardMaxElevation="5dp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:focusable="true"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_gradient"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="80dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/link1"
                                android:background="@color/white">
                            </ImageView>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:text="Brightspace Login"
                            android:lines="2"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:text="Aungier Street, Bolton Street and Grangegorman"
                            android:lines="2"
                            android:textColor="@color/white"
                            android:textSize="10sp">

                        </TextView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/Option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    app:cardMaxElevation="5dp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:layout_marginLeft="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_gradient"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="80dp"
                            app:cardBackgroundColor="@color/background_colour2"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/link2"
                                android:background="@color/white">
                            </ImageView>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:text="Moodle Login"
                            android:lines="2"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:text="Tallaght and Blanchardstown"
                            android:lines="2"
                            android:textColor="@color/white"
                            android:textSize="10sp">

                        </TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/Option3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    app:cardMaxElevation="5dp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:focusable="true"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_gradient"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="80dp"
                            app:cardBackgroundColor="@color/background_colour2"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/link3"
                                android:background="@color/white">
                            </ImageView>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:text="Eduroam"
                            android:lines="2"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:text="How to connect to the WIFI on campus"
                            android:lines="2"
                            android:textColor="@color/white"
                            android:textSize="10sp">

                        </TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/Option4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    app:cardMaxElevation="5dp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:layout_marginLeft="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_gradient"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="80dp"
                            app:cardBackgroundColor="@color/background_colour2"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/link4"
                                android:background="@color/white">
                            </ImageView>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:text="Library"
                            android:lines="2"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Access all of the campus's libraries"
                            android:textStyle="bold"
                            android:lines="2"
                            android:textColor="@color/white"
                            android:textSize="10sp">

                        </TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/Option5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    app:cardMaxElevation="5dp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:focusable="true"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_gradient"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="80dp"
                            app:cardBackgroundColor="@color/background_colour2"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/link5"
                                android:background="@color/white">
                            </ImageView>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:text="Student Timetables"
                            android:lines="3"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Search student timetables for the Academic Year"
                            android:textStyle="bold"
                            android:lines="2"
                            android:textColor="@color/white"
                            android:textSize="10sp">
                        </TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/Option6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    app:cardMaxElevation="5dp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:layout_marginLeft="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_gradient"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="80dp"
                            app:cardBackgroundColor="@color/background_colour2"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/link6"
                                android:background="@color/white">
                            </ImageView>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:text="Exam Results"
                            android:lines="3"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:text="View your exam results"
                            android:lines="2"
                            android:textColor="@color/white"
                            android:textSize="10sp">
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

</ScrollView>